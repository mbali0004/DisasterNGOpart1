        <h2>Goods Donations</h2>

        <div class="w3l-form-group">
            <label style="font-family:cursive; font-weight:100;font-size:12px;" for="Category">Enter your name if you do not want to be annonymous</label>
            <div class="group">
                <i class="fas fa-user"></i>
                <input type="text" id="Good_Name" name="Good_Name" placeholder="Donator Name">
            </div>

            <input class="input" name="Goods_Date" type="date" placeholder="Goods Date" required />
            <input class="input" name="No_of_items" type="number" placeholder="Number of items" required />



            <div class="w3l-form-group">
                <div class="radio-group">
                    <label for="purple">Clothes</label>
                    <input type="radio" id="red" name="Category" value="Clothes">
                    <br />
                    <label for="orange">Perishable Food</label>
                    <input type="radio" id="blue" name="Category" value="Non_Perishable_Food">
                    <br />

                    <label for="blue">Non-Perishable Food</label>
                    <input type="radio" id="blue" name="Category" value="Non_Perishable_Food">
                </div>
            </div>


            <div class="group">
                <i class="fas fa-user"></i>
                <input type="text" id="Good_Name" name="Category" placeholder="Donator Name">
            </div>




            <input class="input" name="Item_description" type="text" placeholder="Item Description" required />


            <div class="w3l-form-group">
                <input type="radio" class="custom-radio" id="radio1" name="Good_Name" value="Annonymous">
                <label for="radio1">Annonymous</label>
            </div>


        </div>
        <button class="btn">Submit</button>
    </form>
