@{
    ViewBag.Title = "Public Information";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />

</head>


<h2>Public Information</h2>

<div>
    <h3>Total Monetary Donations Received: @Model.TotalMonetaryDonations</h3>
    <h3>Total Number of Goods Received: @Model.TotalGoodsReceived</h3>
</div>

<div>
    <h3>Currently Active Disasters</h3>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Disaster Name</th>
                <th>Money Allocated</th>
                <th>Goods Allocated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var disaster in Model.ActiveDisasters)
            {
                <tr>
                    <td>@disaster.Name</td>
                    <td>@disaster.MoneyAllocated</td>
                    <td>@disaster.GoodsAllocated</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .styled-table {
        width: 100%;
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 18px;
        text-align: left;
    }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
        }

        .styled-table th {
            background-color: #f2f2f2;
        }

        .styled-table tbody tr:hover {
            background-color: #f5f5f5;
        }
</style>
